<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="academy.learnprogramming.jokeapp.ui.Controller"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="300.0" prefWidth="400.0">

    <children>
        <BorderPane prefHeight="300.0" prefWidth="400.0">
            <center>
                <TextArea fx:id="jokeTextArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextArea>
            </center>
            <bottom>
                <HBox fx:id="buttonsArea" prefHeight="30.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                    <children> </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>

</AnchorPane>
